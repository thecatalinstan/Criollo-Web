@import globals

body.blog

  .article
    text-align left
    border-bottom 1px solid criollo-lighter-gray
    margin-left 1.5em
    margin-right @margin-left
    
    @media screen and (max-width: phone-cutoff)
      margin-left 0
      margin-right @margin-left
      padding 0.5em 1em
    
    @media screen and (prefers-color-scheme: dark)
      border-bottom 1px solid criollo-dark-gray

    &:first-of-type
      padding-top 0

    &:last-of-type
      border none

    &.single
      
      &.editing
        
        .article-header
          margin-bottom 0
          
        .article-footer
          padding-top 0 !important          

      .article-header
        margin-bottom 2.5em

      .article-title
        letter-spacing -0.1em !important        

      .article-info
        font-size 0.8em !important

      .article-content
        padding-bottom 1px

      .article-footer
        padding-top 2.5em !important

    .article-header

      .article-title
        margin-top 1.5em
        line-height 1.2em

        &[contenteditable="true"]
          border-radius 4px
          outline none
          margin-bottom 0.1em
          padding 0.07em 0.07em 0 0.07em
          border 1px solid criollo-light-gray
          
          @media screen and (prefers-color-scheme: dark)
            border 1px solid criollo-dark-gray

          &.placeholder
            color criollo-light-gray
            
            @media screen and (prefers-color-scheme: dark)
              color criollo-medium-gray

        a
          color criollo-orange
          text-decoration none

          &:hover
            color criollo-light-orange
            text-decoration none

      .article-info
        margin 0
        font-size 0.7em

        .article-author
          margin-left 0.3em

        .article-date
          text-transform lowercase

      .article-handle-container
        margin 1em 0 1em 0
        padding-top 1px
        padding-bottom @padding-top
        vertical-align middle
        white-space nowrap
        line-height 1.5em
        font-size 0.9em
        font-weight 400

        .article-handle-editor-label
          margin-right 0.5em
          vertical-align middle
          display inline-block

          @media screen and (max-width: phone-cutoff)
            width 100%
            display block

        .article-handle-editor
          vertical-align middle
          display inline-block
          background-color white
          border-radius 4px
          width 60%
          padding 0.5em
          box-sizing border-box
          cursor text
          line-height 1.5em
          font-size 0.9em
          font-weight 400
          background-color criollo-lighter-gray
          border 1px solid criollo-light-gray
          color criollo-dark-gray

          @media screen and (prefers-color-scheme: dark)
            background-color criollo-dark-gray
            border 1px solid criollo-darker-gray
            color criollo-light-gray

          @media screen and (max-width: phone-cutoff)
            width 100%
            display block

          &:focus
            outline none

    .article-image
      margin 1.5em auto
      background-size cover
      background-repeat no-repeat
      background-position center
      position relative
      width 100%
      // padding-top 44.64%
      padding-top 56.25%
      box-sizing border-box
      border-radius 4px
      background-color criollo-lighter-gray
      border 1px solid criollo-light-gray
      color criollo-dark-gray
        
      @media screen and (prefers-color-scheme: dark)
        background-color criollo-dark-gray
        border 1px solid criollo-darker-gray
        color criollo-light-gray
        
      &.uploading        
        
        .image-overlay
          opacity 1

        .image-selector
          display none
          
        .image-upload-progress
          display block                

      .image-overlay
        display block
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        width 100%
        height 100%
        background-color alpha(criollo-medium-gray, 0.25)        
        backdrop-filter blur(20px) brightness(60%)
        -webkit-backdrop-filter @backdrop-filter
        opacity 0
        transition opacity 0.25s ease-in-out 0

      .image-selector        
        color criollo-lighter-gray
        display flex
        align-items center
        justify-content center
        text-align center
        overflow hidden
        cursor pointer
        position absolute
        box-sizing border-box
        padding 10px
        top 50%
        left 50%
        width 150px
        height @width
        border-radius (@width / 2)
        margin-top (-@height / 2)
        margin-left (-@width / 2)
        backdrop-filter blur(3px) brightness(150%)
        -webkit-backdrop-filter @backdrop-filter
        background-color alpha(criollo-darker-gray, 0.5)
        
        @media screen and (prefers-color-scheme: dark)
          background-color alpha(criollo-dark-gray, 0.5)
        
        @media screen and (max-width: phone-cutoff)
          width 120px
          height @width
          border-radius (@width / 2)
          margin-top (-@height / 2)
          margin-left (-@width / 2)
          
        &:hover
          color criollo-light-orange
          background-color alpha(criollo-dark-gray, 0.3)
          
          @media screen and (prefers-color-scheme: dark)
            background-color alpha(criollo-medium-gray, 0.3)

      .image-upload-progress         
        display none
        overflow hidden
        cursor default
        position absolute
        top 50%
        left 50%
        width 60%
        height 30px
        margin-top (-@height / 2)
        margin-left (-@width / 2)        
        box-sizing border-box
        border-radius 4px                
        color criollo-lighter-gray        
        border 1px solid criollo-medium-gray
        background-color alpha(criollo-darker-gray, 0.25)
          
        @media screen and (prefers-color-scheme: dark)
          color criollo-light-gray
          border 1px solid criollo-dark-gray
          background-color alpha(criollo-lighter-gray, 0.25)
          
        @media screen and (max-width: phone-cutoff)
          height 20px
          
        .progress-indicator
          cursor default
          width 20%
          height 30px
          font-size 0.7em
          text-align center
          white-space nowrap
          text-overflow ellipsis
          overflow hidden
          box-sizing border-box
          padding 0 10px
          line-height (@height - 2px)
          color criollo-light-gray
          background-color criollo-orange
          
          @media screen and (max-width: phone-cutoff)
            font-size 0.6em
            height 20px
            line-height (@height - 2px)
          
          
    .article-content
      margin 1.5em auto
      text-overflow ellipsis
      
      @media screen and (max-width: phone-cutoff)
        margin-top 1em
        
      figure
        margin-top 0.35em
        
        &.article-thumbnail
          position relative          
          box-sizing border-box                      
          width 300px
          padding-top (@width * 0.5625)
          overflow hidden
          border-radius 4px
          display inline
          float left          
          clear none
          vertical-align top
          background-repeat no-repeat
          background-size cover
          background-position center
          background-color red
          
          @media screen and (max-width: phone-cutoff)            
            width 100%
            padding-top 56.25%
            display block
            float none
      
      p
        &.excerpt
          padding-left calc(300px + 2.25em)
          
          &.no-thumb
            padding-left 0
            
          @media screen and (max-width: phone-cutoff)            
            padding-left 0
            margin-top 1em

          .text
            margin-right 0.4em
        
      ul
        list-style-type disc

      ol
        list-style-type decimal

      ul,
      ol
        font-size 0.9em
        margin 1.5em 0 1.5em 3em
        line-height 1.5em
        list-style-position outside

        li
          padding-left 0.5em

      blockquote
        padding 1em 0 1em 1.5em
        margin 1.5em 0 1.5em 1.5em
        border-radius 4px
        font-size 0.9em
        font-style italic
        line-height 1.9em
        box-sizing border-box
        border-left 4px solid criollo-lighter-gray
        color criollo-medium-gray
        
        @media screen and (prefers-color-scheme: dark)
          border-left 4px solid criollo-dark-gray
          color criollo-medium-gray

        @media screen and (max-width: phone-cutoff)
          margin-left 0 !important

        p:first-of-type
          margin-top 0

        p:last-of-type
          margin-bottom 0

      pre
        margin 1.5em 0        
          
    .article-content-editor
      font-size 0.85em
      font-family monotype-font-family
      line-height 1.5em
      outline none
      width 100%
      height auto
      min-height 500px
      overflow hidden
      padding 0.5em
      box-sizing border-box
      border-radius 4px
      background-color criollo-lighter-gray
      border 1px solid criollo-light-gray
      color criollo-dark-gray

      @media screen and (prefers-color-scheme: dark)
        background-color criollo-dark-gray
        border 1px solid criollo-darker-gray
        color criollo-light-gray
      
    .article-excerpt-editor-label,
    .article-tags-editor-label
      display block
      outline none
      width 100%
      height auto
      box-sizing border-box
      margin-top 2.5em
      margin-bottom 0.5em
      font-weight 400
      color criollo-dark-orange
      
      @media screen and (prefers-color-scheme: dark)
        color criollo-light-orange
        
    .article-excerpt-editor      
      font-size 0.85em
      font-family monotype-font-family
      outline none      
      line-height 1.5em
      outline none      
      width 100%
      height auto
      min-height 138px
      overflow hidden
      padding 0.5em
      box-sizing border-box
      border-radius 4px
      background-color criollo-lighter-gray
      border 1px solid criollo-light-gray
      color criollo-dark-gray

      @media screen and (prefers-color-scheme: dark)
        background-color criollo-dark-gray
        border 1px solid criollo-darker-gray
        color criollo-light-gray
      
    .article-tags-editor
      font-size 1em
      width 100%
      height auto
      // max-width 100%
      line-height 1.5em
      outline none      
      border-radius 4px
      padding 0.5em
      box-sizing border-box
      background-color criollo-lighter-gray
      border 1px solid criollo-light-gray
      color criollo-dark-gray

      @media screen and (prefers-color-scheme: dark)
        background-color criollo-dark-gray
        border 1px solid criollo-darker-gray
        color criollo-light-gray

    .article-published-container
      margin 1em 0
      padding-top 1px
      height 1.5em
      vertical-align middle
      white-space nowrap

      .article-published-editor
        vertical-align middle
        width 1em
        height @width
        display inline-block  

      .article-published-editor-label
        margin-left 0.5em
        font-weight 400
        vertical-align middle
        line-height 1.5em
        display inline-block
        color criollo-dark-gray
      
        @media screen and (prefers-color-scheme: dark)
          color criollo-light-gray

      .article-published-editor-permalink
        float right
        display inline
        line-height 1.5em
        vertical-align middle
        margin-left 0.5em
        margin-top 0.2em
        font-size 0.8em
        overflow hidden
        text-overflow ellipsis
        max-width 80%

        @media screen and (max-width: phone-cutoff)
          max-width 50%

    .editor-toolbar
      margin-top 1em

    .article-footer
      margin 1.5em auto
      padding-top 1.5em
      font-size 0.9em
      vertical-align middle
      min-height 80px
      border-top 1px solid criollo-lighter-gray
      
      @media screen and (prefers-color-scheme: dark)
        border-top 1px solid criollo-dark-gray

      .tags
        line-height 1.5em
        margin-bottom 0.5em

        .tags-label
          margin-right 0.5em
          font-weight 400

      .permalink
        line-height 1.5em

        .permalink-label
          margin-right 0.5em
          font-weight 400

        .permalink-item
          border-radius 4px
          width 40%
          padding 8px 16px
          font-family monotype-font-family
          font-weight 300
          font-size 0.75em
          box-sizing border-box
          cursor text
          color criollo-medium-gray
          background-color transparent
          border 1px solid criollo-light-gray
          
          @media screen and (prefers-color-scheme: dark)
            color criollo-medium-gray
            background-color transparent
            border 1px solid criollo-dark-gray

          @media screen and (max-width: phone-cutoff)
            width auto
            min-width 20%
            max-width 60%

      .sharing
        float right
        display inline
        text-align right

        @media screen and (max-width: phone-cutoff)
          float none
          display block
          text-align left
          margin-bottom 1.5em

      .article-related
        padding-top 1px
        margin 3em 0

        .related-items
          margin-top .5em
          list-style-type disc
          list-style-position inside
          line-height 1.5em

          li
            line-height 1.5em
            margin-left 1.5em

      .article-author-details
        padding-top 1px
        margin 3em 0 0 0
        min-height 3em

        .author-details-label
          line-height 1.5em
          margin-bottom .5em

        .author-image
          width 6em
          height @width
          border-radius 3em
          overflow hidden
          background-repeat no-repeat
          background-size cover
          background-position center
          float left
          display inline
          margin-right 1.5em
          cursor pointer
          opacity 1
        
          @media screen and (prefers-color-scheme: dark)
            opacity 0.7
            
          @media screen and (max-width: phone-cutoff)
            display none


        .author-name
          font-weight 700
          font-family heading-font-family
          margin-bottom 0
          margin-left 7.5em
          line-height 2em
          color criollo-dark-gray

          @media screen and (prefers-color-scheme: dark)
            color criollo-light-gray
            
          @media screen and (max-width: phone-cutoff)
            margin-left 0

          a
            text-decoration none

        .author-location
          font-style italic
          line-height 1em
          font-size 0.85em
          margin-bottom 1em
          margin-left 7.5em
          color criollo-medium-gray
          
          @media screen and (prefers-color-scheme: dark)
            color criollo-medium-gray
          
          @media screen and (max-width: phone-cutoff)
            margin-left 0

        .author-bio
          margin-bottom 1em
          line-height 1.5em
          max-width 60%
          margin-left 7.5em

          @media screen and (max-width: phone-cutoff)
            max-width 100%
            margin-left 0            

        .author-follow
          font-weight 300

        .author-more
          margin-bottom 0
          margin-left 7.5em
          
          @media screen and (max-width: phone-cutoff)
            max-width 100%
            margin-left 0

          a
            font-size 0.85em            

    button
      display block
      margin 20px auto
      font-family heading-font-family
      font-size 1em
      padding 10px 40px
      border none
      transition all 0.25s ease-in-out 0
      cursor pointer
      box-sizing border-box
      border 1px solid criollo-orange
      background-color criollo-orange            
      color criollo-lighter-gray
      border-radius 4px
      
      &:hover
        background-color criollo-light-orange
        border 1px solid criollo-light-orange
        color criollo-dark-orange
        
      @media screen and (prefers-color-scheme: dark)
        border 1px solid criollo-dark-orange
        background-color criollo-dark-orange            
        color criollo-light-gray              
        
        &:hover
          background-color criollo-orange
          border 1px solid criollo-orange
          color criollo-dark-orange
