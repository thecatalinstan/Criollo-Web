@import globals

body.blog

  .article
    padding 2em 1em
    border-bottom 1px solid criollo-medium-gray
    text-align left

    &:first-of-type
      padding-top 0

    &:last-of-type
      border none

    .article-header

      .article-title

        &[contenteditable="true"]
          border 1px solid criollo-medium-gray
          border-radius 4px
          outline none
          margin-bottom 0.1em
          padding 0 0.07em

        a
          color heading-color
          text-decoration none

          &:hover
            color link-color
            text-decoration none

      .article-info
        margin 0
        font-size 0.70em

        .article-author
          margin-left 0.3em

        .article-date
          text-transform lowercase


    .CodeMirror
      .CodeMirror-scroll
        font-size 1em
        line-height 1.5em
        color criollo-dark-gray

    .article-content
      margin 1.5em 0

      blockquote
        padding 0 0 0 1.5em
        margin 1.5em 0 1.5em 3em
        border-left 4px solid criollo-medium-gray
        border-radius 4px
        font-size 0.9em

    .article-content-editor
      font-size 1em
      line-height 1.5em 0
      outline none
      width 100%
      height auto
      min-height 300px
      border 1px solid criollo-medium-gray
      padding 0.5em
      box-sizing border-box
      color criollo-dark-gray

    .article-excerpt-editor-label
      display block
      outline none
      width 100%
      height auto
      box-sizing border-box
      margin-top 1em
      margin-bottom 0.5em
      color criollo-dark-orange
      font-weight 700

    .article-excerpt-editor
      font-size 1em
      line-height 1.5em
      outline none
      width 100%
      height auto
      max-width 100%
      min-height 100px
      border 1px solid criollo-medium-gray
      border-radius 4px
      padding 0.5em
      box-sizing border-box
      color criollo-dark-gray

    .editor-toolbar
      margin-top 1em

    button
      display block
      margin 20px auto
      font-family heading-font-family
      font-size 1em
      padding 10px 40px
      background-color criollo-dark-orange
      color white
      border none
      transition all 0.25s ease-in-out 0
      cursor pointer
      border 1px solid criollo-dark-orange

      &:hover
        background-color white
        color criollo-dark-orange
