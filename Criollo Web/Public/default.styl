@import reset
@import nib

// Color definitions
criollo-light-gray        = #f0f0f0
criollo-dark-gray         = #666666
criollo-orange            = #cc8339
criollo-light-orange      = #f0af6c
criollo-dark-orange       = #633b28

// Layout colors and fonts
body-color                = criollo-dark-gray
masthead-color            = criollo-light-gray
masthead-background-color = criollo-orange
heading-color             = criollo-dark-orange
link-color                = criollo-orange
link-hover-color          = criollo-light-orange
footer-color              = criollo-light-gray
footer-background-color   = criollo-dark-orange
footer-link-color         = link-hover-color
footer-link-hover-color   = white
footer-heading-color      = white

// Fonts
body-font-family          = Helvetica, sans-serif
heading-font-family       = "Ruda", "Trebuchet MS", Verdana, sans-serif


body,
html
  width 100%
  height 100%
  font-size 16px

body
  font-family body-font-family
  color criollo-dark-gray

h1
  font-size 3.6em

h2
  font-size 2em

h3
  font-size 1.2em

h1, h2, h3
  font-family heading-font-family
  font-weight bold
  line-height 1.5em
  letter-spacing -0.05em
  color heading-color

body
  font-size 1.2em

p
  margin 1.5em 0
  line-height 1.5em

a
  color link-color
  text-decoration underline
  transition color 0.25s ease-in-out 0

a:hover
  color link-hover-color

body

  section
    min-height 400px
    padding 3em 2em
    border-bottom 1px solid criollo-light-gray
    text-align center
    vertical-alignment middle

  header
    min-height 600px
    padding 3em 2em
    text-align center
    vertical-alignment middle

  footer
    min-height 300px
    padding 2em
    text-align center
    vertical-alignment top

  section,
  footer,
  header
    .content
      margin 0 auto
      width 100%
      min-width 300px
      max-width 1100px
      background-color red

  .masthead
    background-color masthead-background-color
    text-align center

    .logo
      margin-top 20em

    h1, h2
      color masthead-color

    h2
      font-weight normal

  .footer
    background-color footer-background-color
    color footer-color
    font-size 0.96em

    h3
      color footer-heading-color

    a
      color footer-link-color
      text-decoration none

      &:hover
        color footer-link-hover-color
        text-decoration underline

