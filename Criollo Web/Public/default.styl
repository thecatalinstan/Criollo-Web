@import reset
@import nib

// Color definitions
criollo-light-gray        = #f0f0f0
criollo-dark-gray         = #666666
criollo-orange            = #cc8339
criollo-light-orange      = #f0af6c
criollo-dark-orange       = #633b28

// Layout colors and fonts
body-color                = criollo-dark-gray
masthead-color            = criollo-light-gray
masthead-background-color = criollo-orange
heading-color             = criollo-dark-orange
link-color                = criollo-orange
link-hover-color          = criollo-light-orange
footer-color              = criollo-light-gray
footer-background-color   = criollo-dark-orange
footer-link-color         = link-hover-color
footer-link-hover-color   = white
footer-heading-color      = white

// Fonts
body-font-family          = Helvetica, sans-serif
heading-font-family       = "Ruda", "Trebuchet MS", Verdana, sans-serif
monotype-font-family      = Menlo, Monaco, fixed

// Sizes
phone-cutoff              = 667px

body,
html
  width 100%
  height 100%

// html
  // background-color criollo-orange
  // background-image linear-gradient(to bottom, criollo-orange 0%,criollo-orange 25%,white 25%,white 75%,criollo-dark-orange 75%,criollo-dark-orange 100%)

body
  font-size 16px
  font-family body-font-family
  color criollo-dark-gray

h1
  font-size 3.6em

h2
  font-size 2em

h3
  font-size 1.2em

h1, h2, h3
  font-family heading-font-family
  font-weight bold
  line-height 1.5em
  letter-spacing -0.05em
  color heading-color

body
  font-size 1.2em

p
  margin 1.5em
  line-height 1.5em

a
  color link-color
  text-decoration underline
  transition all 0.25s ease-in-out 0

a:hover
  color link-hover-color

body

  section
    min-height 18.75em
    padding 3em 0
    border-bottom 1px solid criollo-light-gray
    text-align center
    vertical-align middle
    background-color white

    @media screen and (max-width: phone-cutoff)
      padding 0.5em 0

  header
    padding 3em 0
    text-align center
    vertical-align middle

    @media screen and (max-width: phone-cutoff)
      padding 0.5em 0

  footer
    padding 2em 0
    text-align center
    vertical-align top

    @media screen and (max-width: phone-cutoff)
      padding 0

  section,
  footer,
  header
    // display none

    .content
      margin 0 auto
      min-width 300px
      max-width 1136px
      height 100%
      vertical-align middle
      box-sizing border-box

  .masthead
    background-color masthead-background-color
    text-align center
    min-height 30em

    @media screen and (max-width: phone-cutoff)
      min-height 20em

    .content
      width 80%
      max-width 320px
      max-width 960px

      .logo
        margin 5em auto 3em auto

        @media screen and (max-width: phone-cutoff)
          margin 1.5em auto 1.5em auto
          transform scale(0.75)

        img
          width 100%
          max-height 150px

      h2
        @media screen and (max-width: phone-cutoff)
          font-size 1.5em

      h1, h2
        color masthead-color

      h2
        font-weight normal

      p
        color masthead-color

      .get-started
        margin-top 4em
        margin-bottom 1em

        @media screen and (max-width: phone-cutoff)
          margin-top 2em
          margin-bottom 0

        a
          display inline-block
          min-width 10em
          height 3.5em
          line-height @height
          margin 0 1em
          padding 0 1em
          background-color criollo-dark-orange
          color criollo-light-gray
          font-family heading-font-family
          font-size 1.1em
          text-decoration none

          @media screen and (max-width: phone-cutoff)
            margin-bottom 1em

          &:hover
            background-color criollo-light-gray
            color criollo-dark-orange
            text-decoration underline


  section

    h2
      margin-top 1.4em

    &.details
      padding-top 0

      .shields
        padding-top 1em
        margin-bottom 2em

        a
          margin 0 0.25em

      .hello-world
        padding 2em 1em

        code
          text-align left
          font-family Menlo, Monaco, fixed
          font-size 0.9em
          line-height 1.5em
          padding 1.5em 1em
          box-sizing border-box
          overflow-scrolling touch

    &.getting-started

      .external-links
        padding-top 2em

        @media screen and (max-width: phone-cutoff)
            padding-top 1em

        a
          display inline-block
          vertical-align top
          width 6em
          padding 1em
          text-align center
          text-decoration none

          &:hover
            text-decoration none
            background-color criollo-light-gray

            span
              text-decoration underline

          img
            width 4em
            height @width
            margin 0 auto 0.5em auto
            display block

          span
            display block
            font-family heading-font-family

          small
            display block
            font-size 0.6em
            line-height 1em
            color criollo-dark-gray

          // &.github-button
          // &.criollo-web-icon

    //   .github-button
    //     padding 10px
    //     border 1px solid criollo-orange

    &.process-info
      height auto
      max-height auto
      min-height 0
      background-color alpha(criollo-light-orange, 0.85)
      padding-top 0.75em
      padding-bottom 0.5em

      .content
        font-family monotype-font-family
        font-size 0.65em

        p
          margin 0
          line-height 1.5em

  .footer
    background-color footer-background-color
    color footer-color
    font-size 1em
    padding-bottom 0

    .content

      a
        color footer-link-color
        text-decoration none

        &:hover
          color footer-link-hover-color
          text-decoration underline

      .col
        display inline-block
        vertical-align top
        margin 2em
        width 13em

        @media screen and (max-width: phone-cutoff)
          margin 2em 1em 0 1em

        h3
          color footer-heading-color
          margin-bottom 0.25em

        ul
          li
            font-size 0.8em
            line-height 1.5em


      .copyright
        font-size 0.8em
        line-height 1em
        border-top 1px solid criollo-light-orange
        padding 0
        margin-top 2em

