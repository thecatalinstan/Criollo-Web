article.article.single(id="article-{{id}}",data-post="{{id}}")
  header.article-header
    h1.article-title {{title}}
    p.article-info Posted by
      span.article-author
        a(href="{{author-url}}") {{author}}
      span.article-date {{publishedDate}}
      span.article-toolbar {{toolbar}}
  .article-content {{content}}
  footer.article-footer
    .sharing
      .addthis_inline_share_toolbox
    .tags(style="{{tags-style}}")
      span.tags-label Tags:
      span.tags-items {{tags}}
    .permalink
      span.permalink-label Permalink:
      input.permalink-item(readonly,value="{{permalink}}")
    .article-related(style="{{related-style}}")
      h3.related-label You may also be interested in reading:
      ul.related-items {{related}}
